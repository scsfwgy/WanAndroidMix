<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_global_bg_container"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <TextView
        android:id="@+id/fp_tv_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0f0"
        android:padding="10dp"
        android:text="--"/>

    <Button
        android:id="@+id/fp_b_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="点击Toast"/>

    <ImageView
        android:id="@+id/fp_iv_img"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/title_back"/>

    <EditText
        android:id="@+id/fp_et_inpput"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:hint="请输入"/>

    <TextView
        android:id="@+id/fp_v_breath"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="#f000"
        android:clickable="true"
        />

    <View
        android:layout_width="10dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I am a fragment"
        android:textSize="40dp"
        />
</LinearLayout>
