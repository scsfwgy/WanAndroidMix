<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="320dp"
                  android:layout_height="wrap_content"
                  android:background="@drawable/shape_upgrade_tip_dialog_bg"
                  android:gravity="center"
                  android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:tag="beta_title"
            android:text="提醒"
            android:textColor="@color/color_global_dialog_text_first_color"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:lineSpacingExtra="6dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:tag="beta_tip_message"
            android:textColor="@color/color_global_dialog_text_second_color"
            android:textSize="14sp"
            android:textStyle="normal"
            tools:text="--"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_dialog_btn_bg"
                android:tag="beta_cancel_button"
                android:text="取消"
                android:textColor="@color/color_global_text_second"
                android:textSize="17sp"/>

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@drawable/shape_dialog_btn_ok_bg"
                android:tag="beta_confirm_button"
                android:text="确认"
                android:textColor="@color/color_global_text_first"
                android:textSize="17sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
